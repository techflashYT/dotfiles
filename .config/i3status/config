# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format = i3bar
        colors = true
        interval = 5
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "battery 0"
order += "battery 1"
order += "tztime local"

wireless _first_ {
        format_up = "WiFi: (%quality at %essid) %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "Eth: %ip (%speed)"
        format_down = ""
}

disk "/" {
        format = "%avail free on /"
}

load {
        format = "Load: %1min"
}

battery 0 {
	status_bat = " "
	status_chr = "⚡"
	status_full = " "
	status_empty = " "

	integer_battery_capacity = true
	last_full_capacity = true
	override_idle = true

	low_threshold = 20
	threshold_type = percentage
	hide_seconds = true

        format = "BAT0 %status %percentage | %remaining remaining | %consumption"
	format_down = ""
}
battery 1 {
	status_bat = " "
	status_chr = "⚡"
	status_full = " "
	status_empty = " "

	integer_battery_capacity = true
	threshold_type = percent
	last_full_capacity = true
	override_idle = true

	low_threshold = 20
	hide_seconds = true

        format = "BAT1 %status %percentage"
	format_down = ""
}

cpu_usage {
	format = "CPU: %usage"
	max_threshold = 95
	degraded_threshold = 75
	format_above_threshold = "CPU: %usage"
	format_above_degraded_threshold = "CPU: %usage"
}

cpu_temperature 0 {
	path = "/sys/class/thermal/thermal_zone0/temp"
	format = "Temp: %degrees °C"
	max_threshold = 75
	degraded_threshold = 60
}

memory {
        format = "Mem: %available free"
        threshold_degraded = "4G"
        format_degraded = "Mem: %available free"
}

tztime local {
        format = "%-I:%M:%S %p  %-m/%-d/%Y"
}
