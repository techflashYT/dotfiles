# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVuSansM Nerd Font 10

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+w kill

# backlight controls on my laptop
bindcode 232 exec ~/bin/backlight down
bindcode 233 exec ~/bin/backlight up

# mod+space to start the rofi program launcher
bindsym $mod+space exec "rofi -modi drun,run -show drun"

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# set first and second monitor variables
set $fm HDMI-0
set $sm DP-3

workspace 1  output $fm
workspace 2  output $fm
workspace 3  output $fm
workspace 4  output $fm
workspace 5  output $fm
workspace 6  output $fm
workspace 7  output $fm
workspace 8  output $fm
workspace 9  output $fm
workspace 10 output $fm 

workspace 11 output $sm
workspace 12 output $sm
workspace 13 output $sm
workspace 14 output $sm
workspace 15 output $sm
workspace 16 output $sm
workspace 17 output $sm
workspace 18 output $sm
workspace 19 output $sm
workspace 20 output $sm


# switch to workspace
bindsym $mod+1 exec --no-startup-id ~/bin/ws_switch 1
bindsym $mod+2 exec --no-startup-id ~/bin/ws_switch 2
bindsym $mod+3 exec --no-startup-id ~/bin/ws_switch 3
bindsym $mod+4 exec --no-startup-id ~/bin/ws_switch 4
bindsym $mod+5 exec --no-startup-id ~/bin/ws_switch 5
bindsym $mod+6 exec --no-startup-id ~/bin/ws_switch 6
bindsym $mod+7 exec --no-startup-id ~/bin/ws_switch 7
bindsym $mod+8 exec --no-startup-id ~/bin/ws_switch 8
bindsym $mod+9 exec --no-startup-id ~/bin/ws_switch 9
bindsym $mod+0 exec --no-startup-id ~/bin/ws_switch 10

# move focused container to workspace
bindsym $mod+Shift+1 exec --no-startup-id ~/bin/ws_move 1
bindsym $mod+Shift+2 exec --no-startup-id ~/bin/ws_move 2
bindsym $mod+Shift+3 exec --no-startup-id ~/bin/ws_move 3
bindsym $mod+Shift+4 exec --no-startup-id ~/bin/ws_move 4
bindsym $mod+Shift+5 exec --no-startup-id ~/bin/ws_move 5
bindsym $mod+Shift+6 exec --no-startup-id ~/bin/ws_move 6
bindsym $mod+Shift+7 exec --no-startup-id ~/bin/ws_move 7
bindsym $mod+Shift+8 exec --no-startup-id ~/bin/ws_move 8
bindsym $mod+Shift+9 exec --no-startup-id ~/bin/ws_move 9
bindsym $mod+Shift+0 exec --no-startup-id ~/bin/ws_move 10


# assign common windows to specific workspaces
assign [class="firefox-nightly"] "1"
assign [class="firefox"] "1"
assign [class="discord"] "2"
assign [class="vesktop"] "2"
assign [class="Vesktop"] "2"
assign [window_role="music_terminal"] "8"

# reload the configuration file
bindsym $mod+Mod1+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Mod1+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Mod1+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command /home/techflash/.config/i3status/net-wrapper.sh
}

# specific windows to start in floating mode by default
for_window [class="gnome-calculator" instance="gnome-calculator"] floating enable
for_window [class="gnome-screenshot"] floating enable
for_window [class="Gnome-screenshot"] floating enable
for_window [class="net-sourceforge-jnlp-runtime-Boot"] floating enable
